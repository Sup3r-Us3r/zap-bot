  },
  "keywords": [
    "zap-bot",
    "chat-bot",
    "whatsapp",
    "whatsapp-business"
  ],
  "author": "Mayderson Mello",
  "license": "MIT",
  "devDependencies": {
    "@sup3r-us3r/eslint-config": "1.3.0",
    "@types/node": "20.12.5",
    "eslint": "8.56.0",
    "prisma": "5.12.1",
    "tsup": "8.0.2",
    "tsx": "4.7.2",
    "typescript": "5.4.4"
  },
  "dependencies": {
    "@fastify/cors": "9.0.1",
    "@prisma/client": "5.12.1",
    "axios": "1.6.8",
    "dotenv": "16.4.5",
    "fastify": "4.26.2",
    "zod": "3.22.4"
  }
}
